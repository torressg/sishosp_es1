<h1>Cadastro de Paciente</h1>
    <form id= "pacienteF" class="formulario" action="/editado/paciente/{{id}}" method="POST">
        <div class="linha">
            <label id="nomeL" for="nome">Nome Completo</label>    
            <input id="nome" name="nome"
            type="text" placeholder="{{nome}}" value="{{nome}}">
