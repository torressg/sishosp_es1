            </select>
            <label id="dataL" for="data">Data de Nascimento</label>
            <input id="data" name="datanasc" type="date" value="{{datanasc}}">
            <label id="telL" for="tel">Telefone</label>
            <input id="tel" name="telefone" type="tel" value="{{telefone}}">
            <label id="endL" for="end" aria-required="true">Endereço</label>
            <input id="end" name="endereco" value="{{endereco}}">
            <button type="submit" id="enviar">Enviar</button>
        
        </div>
    </form>